<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  Project-wide relaxed Checkstyle rules.
  Goal: keep only essential checks, reduce noisy warnings
  and apply to both main and test sources.
-->
<module name="Checker">

    <!-- Encoding -->
    <property name="charset" value="UTF-8"/>

    <!-- Default severity: treat all violations as warnings unless overridden -->
    <property name="severity" value="warning"/>

    <!-- Basic file-level checks -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Line length: this check must be a direct child of Checker (not TreeWalker) in Checkstyle 10.x -->
    <module name="LineLength">
        <property name="max" value="160"/>
        <property name="ignorePattern" value="^package|^import"/>
    </module>

    <!-- Main rules -->
    <module name="TreeWalker">

        <!-- Naming conventions -->
        <module name="PackageName"/>
        <module name="TypeName"/>
        <module name="MethodName"/>
        <module name="ParameterName"/>
        <module name="LocalVariableName"/>

        <!-- Imports -->
        <module name="UnusedImports"/>
        <module name="AvoidStarImport"/>

        <!-- Braces style (relaxed, allow common styles) -->
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>
        <module name="RightCurly">
            <property name="option" value="same"/>
        </module>

        <!-- Indentation (keep default, not too strict) -->
        <module name="Indentation"/>

        <!-- Method length: allow reasonably long methods -->
        <module name="MethodLength">
            <property name="max" value="120"/>
        </module>

        <!-- Empty catch blocks: allow common variable names for ignored -->
        <module name="EmptyCatchBlock">
            <property name="exceptionVariableName" value="ignored|ignore|expected"/>
        </module>

        <!-- Magic numbers: effectively disabled except for very unusual cases -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1,0,1,2,3,4,5,10,60,100"/>
            <property name="severity" value="ignore"/>
        </module>

    </module>
</module>
